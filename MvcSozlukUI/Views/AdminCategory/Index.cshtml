@using EntityLayer.Concrete
@model List<Category>

@{
    ViewBag.Title = "Kategoriler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary" style="width: 90%; float: left; padding-top: 7px;">Kategoriler</h6>
        <a href="#" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#categoryAddModel">Yeni Kategori</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Kategori</th>
                        <th>Açıklama</th>
                        <th style="text-align:center;"><i class="fas fa-fw fa-pen"></i></th>
                        <th style="text-align:center;"><i class="fa fa-heading" aria-hidden="true"></i></th>
                        <th style="text-align:center;"><i class="fa fa-times" aria-hidden="true"></i></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.CategoryName</td>
                            <td>@item.CategoryDescription</td>
                            <td><a href="/AdminCategory/UpdateCategory/@item.CategoryId" class="btn btn-success btn-sm widthPercent100" title="Düzenle"><i class="fas fa-fw fa-pen" title="Düzenle"></i></a></td>
                            <td><a href="#" class="btn btn-success btn-sm widthPercent100" title="Başlıkları Getir"><i class="fa fa-heading" aria-hidden="true" title="Başlıkları Getir"></i></a></td>
                            <td><a href="/AdminCategory/DeleteCategory/@item.CategoryId" class="btn btn-danger btn-sm widthPercent100" title="Sil"><i class="fa fa-times" aria-hidden="true" title="Sil"></i> </a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="categoryAddModel" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Kategori Ekle</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            @using (Html.BeginForm("AddCategory", "AdminCategory", FormMethod.Post))
            {
                <div class="modal-body">
                    <input type="text" name="CategoryName" id="CategoryName" class="form-control" placeholder="Kategori adını girin" />
                    <br />
                    <input type="text" name="CategoryDescription" id="CategoryDescription" class="form-control" placeholder="Kategori açıklaması girin" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Vazgeç</button>
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .dataTables_paginate {
        float: right !important;
    }
</style>